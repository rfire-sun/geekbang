<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.2.xsd http://www.springframework.org/schema/aop https://www.springframework.org/schema/aop/spring-aop.xsd">
    <context:component-scan base-package="com.sun.spring"/>


<!--    xml配置装配-->
    <bean id="student1"
          class="com.sun.spring.Student">
        <property name="id" value="123"/>
        <property name="name" value="sun123"/>
    </bean>

    <bean id="student2"
          class="com.sun.spring.Student">
        <property name="id" value="100"/>
        <property name="name" value="sun100"/>
    </bean>


    <bean id="class1" class="com.sun.spring.Klass">
        <property name="students">
            <list>
                <ref bean="student1"/>
                <ref bean="student2"/>
                <!--                -->
                <bean class="com.sun.spring.Student">
                    <property name="name" value="ff" />
                    <property name="id" value="001" />
                </bean>
            </list>
        </property>
    </bean>

</beans>